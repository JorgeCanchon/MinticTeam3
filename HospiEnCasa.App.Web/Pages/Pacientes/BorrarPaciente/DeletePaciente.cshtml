@page "{id:int}"
@model HospiEnCasa.App.Web.Pages.Pacientes.DeletePacienteModel
@{
}
<div class="container">
    <div class="row">
        <p class="text-danger">@Model.ErrorMessage</p>
    </div>
    <div class="row">
        <div class="col-md-3 m-3">
            <legend>Confirmar Eliminación</legend>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@Model.Paciente.Nombre @Model.Paciente.Apellidos</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.Paciente.Telefono</h6>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.Paciente.Genero</h6>
                    <p class="card-text">¿Esta seguro de eliminar este paciente? </p>
                    <div>
                        <form method="post">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>