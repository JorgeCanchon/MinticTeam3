@page
@model HospiEnCasa.App.Web.Pages.RegisterModel
@{}

<div class="container mt-5">
  <div class="row justify-content-center align-item-center">
    <div class="col-sm-12 col-md-12 col-lg-4">
      <h1 class="mb-3">Registrar Usuario</h1>
      
      <form method="post">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="mb-3">
          <label class="form-label" asp-for="ModelRegister.Email">Correo Electronico</label>
          <input type="email" asp-for="ModelRegister.Email" class="form-control" />
          <span asp-validation-for="ModelRegister.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
          <label class="form-label" asp-for="ModelRegister.Password">Contraseña</label>
          <input type="text" asp-for="ModelRegister.Password" class="form-control" />
          <span asp-validation-for="ModelRegister.Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
          <label class="form-label" asp-for="ModelRegister.ConfirmPassword">Confirmar Contraseña</label>
          <input type="text" asp-for="ModelRegister.ConfirmPassword" class="form-control" />
          <span asp-validation-for="ModelRegister.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
          <button type="submit" class="btn btn-primary">Registrar</button>
        </div>
      </form>
    </div>
  </div>
</div>
