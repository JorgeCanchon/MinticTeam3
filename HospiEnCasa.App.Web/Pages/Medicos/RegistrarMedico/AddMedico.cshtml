@page
@model HospiEnCasa.App.Web.Pages.AddMedicoModel
@{
  <link href="~/css/forms.css" rel="stylesheet" type="text/css" />
}
<div class="containerForm">
  <div class="title">Registro de Medico</div>
  <div class="content">
    <div class="row">
      <p class="text-danger">@Model.ErrorMessage</p>
    </div>
    <form method="post">
      <div class="user-details">
        <div class="input-box">
          <span class="details" for="nombre">Nombre</span>
          <input type="text" id="nombre" asp-for="Medico.Nombre" placeholder="Ingrese su nombre" required />
        </div>
        <div class="input-box">
          <span class="details" for="apellidos">Apellidos</span>
          <input type="text" id="apellidos" asp-for="Medico.Apellidos" placeholder="Ingrese sus apellidos" required>
        </div>
        <div class="input-box">
          <span class="details" for="telefono">Telefono</span>
          <input type="text" id="telefono" asp-for="Medico.Telefono" placeholder="Ingrese su telefono" required>
        </div>
        <div class="input-box">
          <span class="details" for="especialidad">Especialidad</span>
          <input type="text" id="especialidad" asp-for="Medico.Especialidad" placeholder="Ingrese su especialidad"
            required>
        </div>
        <div class="input-box">
          <span class="details" for="codigo">Codigo</span>
          <input type="text" id="codigo" asp-for="Medico.Codigo" placeholder="Ingrese su codigo" required>
        </div>
        <div class="input-box">
          <span class="details" for="registroRethus">Registro Rethus</span>
          <input type="text" id="registroRethus" asp-for="Medico.RegistroRethus"
            placeholder="Ingrese su registro rethus" required>
        </div>
      </div>
      <div class="input-box">
        <span class="details" for="genero">GÃ©nero</span>
        <select class="details" asp-for="Medico.Genero">
          <option value="0">Masculino</option>
          <option value="1">Femenino</option>
          <option value="2">Otro</option>
        </select>
        <span clas="text-danger" asp-validation-for="Medico.Genero"></span>
      </div>
      <div class="button">
        <input type="submit" value="Registrar">
      </div>
    </form>
  </div>
</div>