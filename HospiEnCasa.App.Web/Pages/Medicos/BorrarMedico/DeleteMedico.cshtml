@page
@model HospiEnCasa.App.Web.Pages.DeleteMedicoModel
@{
}
<div class="container">
    <div class="row">
        <p class="text-danger">@Model.ErrorMessage</p>
    </div>
    <div class="row">
        <div class="col-md-3 m-3">
            <legend>Confirmar Eliminación</legend>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <input type="hidden" id="idMedico" asp-for="Medico.IdMedico" />
                    <h5 class="card-title">@Model.Medico.Nombre @Model.Medico.Apellidos</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.Medico.Especialidad</h6>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.Medico.Codigo</h6>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.Medico.RegistroRethus</h6>
                    <p class="card-text">¿Esta seguro de eliminar este medico? </p>
                    <div>
                        <form method="post">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>