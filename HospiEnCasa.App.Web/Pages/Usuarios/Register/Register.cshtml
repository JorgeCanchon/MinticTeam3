@page "/register"
@model HospiEnCasa.App.Web.Pages.Usuarios.Register.RegisterModel
@{}

<div class="container border" style="padding: 20px;">
  <form method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
      <div class="col-3">
        <label>Nombre de Usuario</label>
      </div>
      <div class="col-5">
        <input type="text" asp-for="Usuario.UserName" class="form-control" />
      </div>
      <span class="text-danger" asp-validation-for="Usuario.UserName"></span>
    </div>
    <div class="form-group row">
      <div class="col-3">
        <label>Correo Electronico</label>
      </div>
      <div class="col-5">
        <input type="text" asp-for="Usuario.Email" class="form-control" />
      </div>
      <span class="text-danger" asp-validation-for="Usuario.Email"></span>
    </div>
    <div class="form-group row">
      <div class="col-3">
        <label>Contrase√±a</label>
      </div>
      <div class="col-5">
        <input type="password" asp-for="Usuario.Password" class="form-control" />
      </div>
      <span class="text-danger" asp-validation-for="Usuario.Password"></span>
    </div>
    <div class="form-group row">
      <div class="col-3">
        <input type="submit" class="btn btn-primary" value="Register" />
      </div>
      <div class="col-5">
      </div>
    </div>
  </form>
</div>